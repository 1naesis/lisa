{% extends 'crm/base.html.twig' %}
{% block context %}
<div class="top-line">
    <div class="breadcrumb">
        <p class="top-line-title">
            <a class="breadcrumb-item-link" href="{{ path('lk/setting') }}">Настройки</a>
            <svg class="breadcrumb-item" width="13" height="18" viewBox="0 0 13 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 16.5L11 8.80769L0.999999 1.5" stroke="#966B59" stroke-width="2" stroke-linecap="round"/>
            </svg>
        </p>
        <a href="{{ path('lk/setting/staff') }}"><p class="top-line-next-page">Список cотрудников</p></a>
        <svg class="breadcrumb-item" width="13" height="12" viewBox="0 0 13 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 16.5L11 8.80769L0.999999 1.5" stroke="#4F4F4F" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <p class="top-line-next-page">
            {% if staff == 0 %}
                Новый сотрудник
            {% else %}
                {{ user.surname ~ ' ' ~ user.name }}
            {% endif %}
        </p>
    </div>
    <p class="top-line-date">8 Апрель 2021 18:50</p>
</div>
<div class="filter-block">
    <p class="title-block-title">
        Редактор сотрудника
    </p>
</div>
<div class="table-title">
    <p class="table-row-title active-table">Информация</p>
    <p class="table-row-title">Расписание</p>
    <p class="table-row-title">Расчет ЗП</p>
</div>
<div class="edit-staff-wrapper">
{#    {{ dump(user) }}#}
    {{ form_start(form_user, {attr:{'class':'main-info-edit-staff', 'id':'table-content-1'}}) }}
        <div class="edit-staff-place">
            <div class="inputs-edit-staff">
                <div class="left-edit-staff">
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_name">Имя</label>
                        {{ form_widget(form_user.name, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="name" class="input-staff-editor" type="text" id="firstname-form-edit">#}
                    </div>
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_surname">Фамилия</label>
                        {{ form_widget(form_user.surname, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="surname" class="input-staff-editor" type="text" id="secondname-form-edit">#}
                    </div>
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_patronymic">Отчество</label>
                        {{ form_widget(form_user.patronymic, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="patronymic" class="input-staff-editor" type="text" id="lastname-form-edit">#}
                    </div>
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_position">Должность</label>
                        {{ form_widget(form_user.position, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="position" class="input-staff-editor" type="text" id="position-form-edit">#}
                    </div>
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_description">Описание</label>
                        {{ form_widget(form_user.description, {attr:{
                            'class':'input-staff-editor',
                            'cols':'30',
                            'rows':'10'
                            }})
                        }}
{#                        <textarea name="description" class="input-staff-editor" id="description-form-edit" name="" cols="30" rows="10"></textarea>#}
                    </div>
                </div>
                <div class="rigth-edit-staff">
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_phone">Номер телефона</label>
                        {{ form_widget(form_user.phone, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="phone" class="input-staff-editor" type="text" id="phone-form-edit">#}
                    </div>
{#                    <div class="input-form-edit-staff">#}
{#                        <label class="input-label-staff-editor" for="employed-form-edit">Дата приема на работу</label>#}
{#                        <input name="employed" class="input-staff-editor" type="text" id="employed-form-edit">#}
{#                    </div>#}
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_email">Email(требуется для входа)</label>
                        {{ form_widget(form_user.email, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="email" class="input-staff-editor" type="email" id="email-form-edit">#}
                    </div>
                    <div class="input-form-edit-staff">
                        <label class="input-label-staff-editor" for="user_new_password">Пароль(требуется для входа)</label>
                        {{ form_widget(form_user.new_password, {attr:{'class':'input-staff-editor'}}) }}
{#                        <input name="password" class="input-staff-editor" type="password" id="password-form-edit">#}
                    </div>

                </div>
            </div>
            <div class="btns-edit-staff">
                {{ form_widget(form_user.save, {label:'Сохранить', attr:{'class':'btn-success'}}) }}
{#                <button type="submit" class="btn-success">Сохранить</button>#}

                {% if staff != 0 %}
                    <button class="btn-delete">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <mask id="mask0" mask-type="alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="20" height="20">
                                <rect width="20" height="20" fill="url(#pattern0)"/>
                            </mask>
                            <g mask="url(#mask0)">
                                <rect width="20" height="20" fill="#966B59"/>
                            </g>
                            <defs>
                                <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                                    <use xlink:href="#image0" transform="scale(0.01)"/>
                                </pattern>
                                <image id="image0" width="100" height="100" xlink:href="data:image/png;base64,"/>
                            </defs>
                        </svg>
                        Удалить
                    </button>
                {% endif %}
            </div>
        </div>
        <div class="photo-loader">
            <div class="preview-image-staff">
                {% if user.avatar is not empty %}
                    <img src="{{ asset('uploads/user/' ~ user.avatar) }}" alt="">
                {% else %}
                    <img src="{{ asset('assets/image/def-load-person.png') }}" alt="">
                {% endif %}
            </div>
            <div class="load-image-staff">
                <label class="btn-success" for="user_avatar">
                    Загрузить
                </label>
{#                <input name="avatar" style="display: none;" type="file" id="input-load-file-hidden">#}
                {{ form_widget(form_user.avatar, {attr:{'style':'display: none;'}}) }}
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >
    {{ form_end(form_user) }}
    <!-- <div id="table-content-2">

    </div>
    <div id="table-content-3">

    </div> -->
</div>
{% endblock %}