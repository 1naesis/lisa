{% extends 'crm/base.html.twig' %}
{% block breadcrumbs %}
    <p class="top-line-title">
        <a class="breadcrumb-item-link" href="{{ path('lk/setting') }}">Настройки</a>
        <svg class="breadcrumb-item" width="13" height="18" viewBox="0 0 13 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 16.5L11 8.80769L0.999999 1.5" stroke="#966B59" stroke-width="2" stroke-linecap="round"/>
        </svg>
    </p>
    <p class="top-line-next-page">
        Категории услуг
    </p>
{% endblock %}
{% block context %}
    <!-- <div class="filter-block">
        <p class="title-block-title">Тут фильтрация</p>
    </div> -->
    <div class="title-rows">
        <!-- <p class="title-row-title">Статус</p>
        <p class="title-row-title">Имя</p>
        <p class="title-row-title">Услуги</p> -->
        <a href="{{ path('lk/setting/category_edit', {'category_id': 0}) }}" class="title-row-link">
            <svg width="12" height="10" viewBox="0 0 12 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 1V9.5M1 5H11" stroke="#FCFAFA" stroke-linecap="round"/>
            </svg>

            Добавить категорию
        </a>
    </div>
    <div class="options-block">
        {% for category in categories %}
            <div class="position-option-block">
                <div class="position-option-content">
                    <img class="image-position" src="{{ asset('assets/image/def-position.png') }}" alt="">
                    <a href="{{ path('lk/setting/services', {'category':category.id}) }}"><p class="title-position">{{ category.title }}</p></a>
                </div>
                <div>
                    <a href="{{ path('lk/setting/category_edit', {'category_id': category.id}) }}">
                        <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <rect class="option-staff-editor" width="40" height="40" rx="3" fill="#966B59"/>
                            <mask id="mask0" mask-type="alpha" maskUnits="userSpaceOnUse" x="10" y="10" width="20" height="20">
                                <rect x="10" y="10" width="20" height="20" fill="url(#pattern0)"/>
                            </mask>
                            <g mask="url(#mask0)">
                                <rect x="10" y="10" width="20" height="20" fill="#FCFAFA"/>
                            </g>
                            <defs>
                                <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                                    <use xlink:href="#image0" transform="scale(0.015625)"/>
                                </pattern>
                                <image id="image0" width="64" height="64" xlink:href="data:image/png;base64,"/>
                            </defs>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
