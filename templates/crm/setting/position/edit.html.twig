{% extends 'crm/base.html.twig' %}
{% block context %}
<div class="top-line">
    <div class="breadcrumb">
        <p class="top-line-title">
            <a class="breadcrumb-item-link" href="{{ path('lk/setting') }}">Настройки</a>
            <svg class="breadcrumb-item" width="13" height="18" viewBox="0 0 13 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1 16.5L11 8.80769L0.999999 1.5" stroke="#966B59" stroke-width="2" stroke-linecap="round"/>
            </svg>
        </p>
        <a href="{{ path('lk/setting/position') }}"><p class="top-line-next-page">Список должностей</p></a>
        <svg class="breadcrumb-item" width="13" height="12" viewBox="0 0 13 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 16.5L11 8.80769L0.999999 1.5" stroke="#4F4F4F" stroke-width="2" stroke-linecap="round"/>
        </svg>
        <p class="top-line-next-page">
            {% if position_id == 0 %}
                Новая должность
            {% else %}
                {{ position.title }}
            {% endif %}
        </p>
    </div>
    <p class="top-line-date">8 Апрель 2021 18:50</p>
</div>
<div class="filter-block">
    <p class="title-block-title">
        Редактор должностей
    </p>
</div>
<div class="edit-position-wrapper">
    {{ form_start(form_position, {attr:{'class':'edit-position-place'}}) }}
        <div class="field-position">
            <div class="title-position-field">
                <p>Название</p>
            </div>
            <div class="input-position-field-block">
                {{ form_widget(form_position.title, {attr:{'class':'input-position-field'}}) }}
            </div>
        </div>
        <div class="field-position">
            <div class="title-position-field">
                <p>Описание</p>
            </div>
            <div class="input-position-field-block">
                {{ form_widget(form_position.description, {attr:{
                    'class':'input-position-field',
                    'cols':'30',
                    'rows':'10'
                }})
                }}
            </div>
        </div>
        <div class="btns-edit-position">
            <button type="submit" class="btn-success">Сохранить</button>

            <button class="btn-delete">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <mask id="mask0" mask-type="alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="20" height="20">
                        <rect width="20" height="20" fill="url(#pattern0)"/>
                    </mask>
                    <g mask="url(#mask0)">
                        <rect width="20" height="20" fill="#966B59"/>
                    </g>
                    <defs>
                        <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                            <use xlink:href="#image0" transform="scale(0.01)"/>
                        </pattern>
                        <image id="image0" width="100" height="100" xlink:href="data:image/png;base64,"/>
                    </defs>
                </svg>
                Удалить
            </button>
        </div>
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >
    {{ form_end(form_position) }}
</div>
{% endblock %}