{% block context %}
    <div class="top-line">
        <div class="breadcrumb">
            <p class="top-line-title">Настройки</p>
        </div>
        <p class="top-line-date">8 Апрель 2021 18:50</p>
    </div>
    <div class="title-block">
        <p class="title-block-title">Название</p>
    </div>
    <div class="options-block">
        <div class="option-block" onclick="togglePodcat(this);">
            <p class="option-block-title">настройка услуг
                <span class="arrow-drop">&#9660;</span>
            </p>
            <ul class="option-block-podcat">
